<script>
  // 结果页面交互逻辑
  document.addEventListener('DOMContentLoaded', () => {
    // 数字动画效果
    animateNumbers();
    
    // 下单按钮点击处理
    const orderButton = document.querySelector('[data-action="order"]');
    orderButton?.addEventListener('click', handleOrder);
  });

  function animateNumbers() {
    const price = document.getElementById('ai-price');
    const savings = document.getElementById('savings-amount');
    
    if (price) animateNumber(price, 0, 1280, 2000);
    if (savings) animateNumber(savings, 0, 1280, 2000);
  }

  function animateNumber(element, start, end, duration) {
    const startTime = performance.now();
    
    function update(currentTime) {
      const elapsed = currentTime - startTime;
      const progress = Math.min(elapsed / duration, 1);
      
      const current = Math.floor(start + (end - start) * progress);
      element.textContent = current.toLocaleString();
      
      if (progress < 1) {
        requestAnimationFrame(update);
      }
    }
    
    requestAnimationFrame(update);
  }

  function handleOrder() {
    // 处理下单逻辑
    console.log('Order button clicked');
    
    // 可以跳转到下单页面或显示下单模态框
    const smartPromiseSection = document.getElementById('smart-promise-section');
    if (smartPromiseSection) {
      smartPromiseSection.scrollIntoView({ behavior: 'smooth' });
    }
  }
</script>