# Supabase Configuration
# Get these values from your Supabase project settings
PUBLIC_SUPABASE_URL=https://your-project.supabase.co
PUBLIC_SUPABASE_ANON_KEY=your-anon-key

# Optional: Service role key for server-side operations
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Site Configuration
PUBLIC_SITE_URL=https://geppetto.com

# Contact & Email Configuration (Optional)
# For email notifications - configure if using external email service
SENDGRID_API_KEY=your-sendgrid-api-key
RESEND_API_KEY=your-resend-api-key

# Admin Configuration (Optional)
# For admin dashboard access
ADMIN_EMAIL=admin@geppetto.com

# Analytics & Monitoring (Optional)
# Google Analytics 4 Configuration
PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX
PUBLIC_GA_ENABLE_DEV=false

# Cookie Consent Configuration
PUBLIC_COOKIE_CONSENT_ENABLED=true

# Other Analytics
HOTJAR_ID=your-hotjar-id

# Development Settings
NODE_ENV=development