            {currentText.ctaSubtitle}
          </p>
          
          <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
            <button 
              data-action="confirm-order"
              class="bg-purple-700 text-white px-12 py-4 rounded-full text-xl font-bold hover:bg-purple-800 transform hover:scale-105 transition-all duration-300 shadow-2xl">
              {currentText.confirmButton}
            </button>
            
            <button 
              data-action="consult"
              class="border-2 border-purple-700 text-purple-700 px-8 py-4 rounded-full text-lg font-semibold hover:bg-purple-700 hover:text-white transition-all duration-300">
              {currentText.consultButton}
            </button>
          </div>
          
          <div class="mt-8 flex items-center justify-center space-x-6 text-purple-800">
            {currentText.features.map((feature) => (
              <div class="flex items-center space-x-2">
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                </svg>
                <span class="text-sm">{feature}</span>
              </div>
            ))}
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  /* 动画效果 */
  @keyframes glow {
    0%, 100% { box-shadow: 0 0 20px rgba(255, 255, 255, 0.2); }
    50% { box-shadow: 0 0 40px rgba(255, 255, 255, 0.4); }
  }
  
  .animate-glow {
    animation: glow 3s ease-in-out infinite;
  }
</style>

<script define:vars={{ language }}>
  // 智能承诺交互逻辑
  document.addEventListener('DOMContentLoaded', () => {
    // 添加滚动触发动画
    setupScrollAnimations();
    
    // CTA按钮处理
    setupCTAButtons();
  });

  function setupScrollAnimations() {
    const cards = document.querySelectorAll('[class*="group"]');
    
    const observer = new IntersectionObserver((entries) => {
      entries.forEach((entry) => {
        if (entry.isIntersecting) {
          entry.target.style.animation = 'fadeInUp 0.6s ease-out forwards';
        }
      });
    }, { threshold: 0.1 });

    cards.forEach(card => observer.observe(card));
  }

  function setupCTAButtons() {
    // 下单按钮
    const orderButton = document.querySelector('[data-action="confirm-order"]');
    orderButton?.addEventListener('click', () => {
      console.log('Confirm order clicked');
      // 滚动到文件上传区域
      const uploadSection = document.getElementById('file-upload-section');
      if (uploadSection) {
        uploadSection.scrollIntoView({ behavior: 'smooth' });
      }
    });

    // 咨询按钮
    const consultButton = document.querySelector('[data-action="consult"]');
    consultButton?.addEventListener('click', () => {
      console.log('Consult expert clicked');
      // 根据语言跳转到联系页面
      const contactPath = language === 'en' ? '/en/contact' : '/zh/contact';
      window.location.href = contactPath;
    });
  }
</script>